<div class="container">
  <h3 class="d-inline-block px-4 ml-5"><i class="fas fa-user-astronaut"></i> マイページ</h3>
<div class="row px-5 mt-4">
  <h4 class="col-2">登録情報</h4>
  <%= link_to "編集する", edit_customer_path, class: "btn btn-sm btn-success ml-5" %>
</div>
<div class="row my-2px-5">
  <table class="col-6 table table-bordred mb-5">
    <tr>
      <th class="bg-light col-4">氏名</th>
      <td>
        <%= current_customer.last_name %> <%= current_customer.first_name %>
      </td>
    </tr>
    <tr>
        <th class="bg-light">カナ</th>
        <td>
          <%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %>
        </td>
    </tr>
    <tr>
      <th class="bg-light">郵便番号</th>
      <td>
        <%= current_customer.postal_code %>
      </td>
    </tr>
    <tr>
      <th class="bg-light">住所</th>
      <td>
        <%= current_customer.address %>
      </td>
    </tr>
    <tr>
      <th class="bg-light">電話番号</th>
      <td>
        <%= current_customer.phone_number %>
      </td>
    </tr>
    <tr>
      <th class="bg-light">メールアドレス</th>
      <td>
        <%= current_customer.email %>
      </td>
    </tr>
  </table>
  <div class="col-5 offset-1">
    <div class="row">
      <h4 class="col-5">配送先</h4>
      <%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-primary" %>
    </div>
    <div class="row my-3">
      <h4 class="col-5">注文履歴</h4>
      <%= link_to "一覧を見る", orders_path, class:"btn btn-warning" %>
    </div>
  </div>
</div>
</div>