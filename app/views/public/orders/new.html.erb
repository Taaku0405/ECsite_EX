<div class="container">
  <h3 class="d-inline-block px-4 ml-5"><i class="fas fa-shopping-bag"></i>注文情報入力</h3>
  <div id="error">
    <%= render "layouts/error_messages", model: @order %>
  </div>
  <div class="container my-4">
    <%= form_with model: @order, url: confirmation_path, method: :post do |f|%>
    <h4 class="font-weight-bolder d-inline-block px-2">支払い方法</h4>
    <div class="payment_method ml-5">
      <div class="form">
        <%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
        <%= f.label :method_of_payment, Order.method_of_payments_i18n[:credit_card] %>
      </div>
      <div class="form">
        <%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
        <%= f.label :method_of_payment, Order.method_of_payments_i18n[:transfer] %>
      </div>
    </div>
  <h4 class="font-weight-bolder d-inline-block px-2">お届け先</h4>
  <div class="address ml-5">
    <!--会員情報に登録されている住所-->
    <div class="form">
      <%= f.radio_button :address, Order.addresses.key(0), checked: "checked" %>
      <%= f.label :address, Order.addresses_i18n[:my_address] %><br>
      <p class="ml-4">〒<%= @customer.postal_code %> <%= @customer.address %><br>
      <%= @customer.last_name %><%= @customer.first_name %>
      </p>
    </div>
    <!--登録済みの住所を選択する-->
    <div class="form mt-3">
      <% if @customer.addresses.any? %>
      <%= f.radio_button :address, Order.addresses.key(1) %>
      <%= f.label :address, Order.addresses_i18n[:registered_address] %>
      <div class="form ml-4">
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>
      <% end %>
    </div>
    <!--新しく住所を入力する-->
    <div class="form mt-3">
      <%= f.radio_button :address, Order.addresses.key(2) %>
      <%= f.label :address, Order.addresses_i18n[:new_address] %>
      <div class="form-group ml-4 row">
        <label for="postal_code" class="col-3 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-5">
          <%= f.text_field :postal_code, class:"form-control mx-2", "placeholder" => "0000000" %>
        </div>
      </div>
      <div class="form-group ml-4 row">
        <label for="address" class="col-3 col-form-label">住所</label>
        <div class="col-9">
          <%= f.text_field :address, class:"form-control mx-2", "placeholder" => "大阪府大阪市中央区0-0-0" %>
        </div>
      </div>
      <div class="form-group ml-4 row">
        <label for="name" class="col-3 col-form-label">宛名</label>
        <div class="col-5">
          <%= f.text_field :name, class:"form-control mx-2", "placeholder" => "鈴木佳子" %>
        </div>
      </div>
    </div>
  </div>
  <div class="actions d-flex justify-content-center">
     <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
  </div>
  <% end %>
  </div>
</div>