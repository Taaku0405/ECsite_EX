<div class="container">
  <h3 class="d-inline-block px-4 ml-5"><i class="fas fa-shopping-bag"></i>注文履歴詳細</h3>
  <div class="my-4">
    <div class="row mb-3">
      <div class="order_details col-7">
        <h5>注文履歴</h5>
        <table class="items table table-bordered">
          <tbody>
            <tr>
              <th class="col-3 bg-light">注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th class="bg-light">配送先</th>
              <td>〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </tr>
            <tr>
              <th class="bg-light">支払方法</th>
              <td><%= @order.method_of_payment_i18n %></td>
            </tr>
            <tr>
              <th class="bg-light">ステータス</th>
              <td><%= @order.order_status_i18n %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="order_bills col-4 ml-5">
        <h5>請求情報</h5>
        <table class="price table table-bordered">
          <tbody>
            <tr>
              <th class="col-5 bg-light">商品合計</th>
              <td>￥<%= @total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="bg-light">配送料</th>
              <td>￥<%= @order.shipping_fee.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="bg-light">ご請求額</th>
              <td>￥<%= @order.billing_amount.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="order_items col-10">
        <h5>注文内容</h5>
        <table class="items table table-bordered">
          <thead>
            <tr class="bg-light">
              <th class="col-4">商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></th>
              <td>￥<%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td>￥<%= (order_detail.item.with_tax_price * order_detail.amount).to_s(:delimited) %></td>
            </tr>
            <% end 
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>