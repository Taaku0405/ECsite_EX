<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="d-inline-block px-4 mx-5 mb-3"><i class="fas fa-shopping-basket"></i>商品情報編集</h3>
      <div id="error">
        <%= render "layouts/error_messages", model: @item %>
      </div>
    </div>
    <div class="col-lg-8 mx-auto">
      <%= form_with model: @item,url: admin_item_path, local: :true do |f| %>
      <%= render "form_item", f: f %>
      <div class="text-center">
        <%= f.submit "内容を更新する", class: "btn btn-success px-5" %>
      </div>
      <% end %>
    </div>
  </div>
</div>